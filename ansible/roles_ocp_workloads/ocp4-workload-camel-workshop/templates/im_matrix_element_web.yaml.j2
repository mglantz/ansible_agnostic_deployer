---

apiVersion: v1
kind: ConfigMap
metadata:
  name: element-config
  namespace: "{{ matrix_synapse_namespace }}"
data:
  config.json: |
    {
        "default_server_config": {
            "m.homeserver": {
                "base_url": "https://synapse-matrix.{{ route_subdomain }}",
                "server_name": "synapse-matrix"
            }
        },


        "embedded_pages": {
            "login_for_welcome": true
        },

        "disable_custom_urls": true,
        "disable_guests": false,
        "disable_login_language_selector": false,
        "disable_3pid_login": true,
        "brand": "Element",
        "integrations_ui_url": "https://scalar.vector.im/",
        "integrations_rest_url": "https://scalar.vector.im/api",
        "integrations_widgets_urls": [
                "https://scalar.vector.im/_matrix/integrations/v1",
                "https://scalar.vector.im/api",
                "https://scalar-staging.vector.im/_matrix/integrations/v1",
                "https://scalar-staging.vector.im/api"
        ],
        "bug_report_endpoint_url": "https://element.io/bugreports/submit",
        "defaultCountryCode": "GB",
        "show_labs_settings": false,
        "features": { },
        "default_federate": true,
        "default_theme": "light",
        "room_directory": {
            "servers": [
                    "https://synapse-matrix.{{ route_subdomain }}"
            ]
        },
        "enable_presence_by_hs_url": {
            "https://matrix.org": false,
            "https://matrix-client.matrix.org": false
        },
        "setting_defaults": {
            "breadcrumbs": true,
            "UIFeature.passwordReset": false,
            "UIFeature.BulkUnverifiedSessionsReminder": false
        },
        "jitsi": {
            "preferred_domain": "meet.element.io"
        }
    }


---


apiVersion: apps/v1
kind: Deployment
metadata:
  name: element
  namespace: "{{ matrix_synapse_namespace }}"
spec:
  selector:
    matchLabels:
      app: element
  replicas: 1
  template:
    metadata:
      labels:
        app: element
    spec:
      containers:
      - name: element
        image: vectorim/element-web:latest
        volumeMounts:
        - name: config-volume
          mountPath: /app/config.json
          subPath: config.json
        ports:
        - containerPort: 8080
          name: element
          protocol: TCP
        env:
        - name: ELEMENT_WEB_PORT
          value: "8080" # Set the desired port
        readinessProbe:
            httpGet:
                path: /
                port: element
            initialDelaySeconds: 2
            periodSeconds: 3
        livenessProbe:
            httpGet:
                path: /
                port: element
            initialDelaySeconds: 10
            periodSeconds: 10
      volumes:
      - name: config-volume
        configMap:
          name: element-config

---


apiVersion: v1
kind: Service
metadata:
  name: element
  namespace: "{{ matrix_synapse_namespace }}"
spec:
  selector:
    app: element
  ports:
    - name: default
      protocol: TCP
      port: 80
      targetPort: 8080

---


kind: Route
apiVersion: route.openshift.io/v1
metadata:
  name: element
  namespace: "{{ matrix_synapse_namespace }}"
  labels:
    app: element
spec:
  to:
    kind: Service
    name: element
  port:
    targetPort: default
  wildcardPolicy: None
  tls:
    termination: edge